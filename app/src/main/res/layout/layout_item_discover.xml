<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/top_item"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">

        <com.kira.mypublishplatform.view.RoundAngleImageView
            android:id="@+id/top_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/discover_bg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/dp_4"
            android:layout_above="@+id/top_publish_date"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_xh" />

        <TextView
            android:id="@+id/top_news_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:layout_toEndOf="@+id/top_publish_date"
            android:textSize="@dimen/text_xxm"
            android:text="5.0"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/top_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="2019-09-10 11:11:11"
            android:textSize="@dimen/text_xxm"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/multiply_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/multiply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:text=""
            android:textSize="@dimen/text_xh"
            android:textColor="@color/text_selected"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal">

            <com.kira.mypublishplatform.view.RoundAngleImageView
                android:id="@+id/multiply_image_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_2"
                android:src="@mipmap/discover_bg"
                android:scaleType="centerCrop"/>

            <com.kira.mypublishplatform.view.RoundAngleImageView
                android:id="@+id/multiply_image_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_2"
                android:src="@mipmap/discover_bg"
                android:scaleType="centerCrop"/>

            <com.kira.mypublishplatform.view.RoundAngleImageView
                android:id="@+id/multiply_image_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_2"
                android:src="@mipmap/discover_bg"
                android:scaleType="centerCrop"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/multiply_news_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="@dimen/text_xxm"
                android:text="5.0"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/multiply_publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_color"
                android:text="2019-09-10"
                android:textSize="@dimen/text_xxm"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="@dimen/dp_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:padding="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_selected"
                    android:textSize="@dimen/text_xh"

                    android:text="" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/normal_news_from"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/text_xxm"
                    android:text="5.0"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/normal_publish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:text="2019-09-10 11:11:11"
                    android:textSize="@dimen/text_xxm"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>

        </RelativeLayout>

        <com.kira.mypublishplatform.view.RoundAngleImageView
            android:id="@+id/news_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:src="@mipmap/head_image"
            android:scaleType="centerCrop"/>

    </LinearLayout>

