<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/top_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">

        <ImageView
            android:id="@+id/top_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/discover_bg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:maxLines="1"
            android:text="@string/no_information"
            android:textSize="@dimen/text_xh"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/normal_item"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/head_image"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="@dimen/dp_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:padding="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_selected"
                    android:textSize="@dimen/text_xh"
                    android:textStyle="bold"
                    android:text="按时发哈就立刻决定离士大夫是领导发话了开就离开" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/news_from"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="5.0"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/publish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:text="2019-09-10 11:11:11"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
